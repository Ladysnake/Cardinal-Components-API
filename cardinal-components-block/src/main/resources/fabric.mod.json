{
  "schemaVersion": 1,
  "environment": "*",
  "id": "cardinal-components-block",
  "name": "Cardinal Components API (blocks)",
  "description": "dynamically exposing components",
  "version": "${version}",
  "icon": "assets/cardinal-components-block/icon.png",
  "entrypoints": {
    "main": [
      "org.ladysnake.cca.internal.CardinalComponentsBlock::init"
    ],
    "client": [
      "org.ladysnake.cca.internal.CcaBlockClient::initClient"
    ]
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ],
      "parent": {
        "id": "cardinal-components",
        "name": "Cardinal Components API",
        "description": "Attaching more data to various game objects",
        "badges": [ "library" ]
      }
    },
    "loom:injected_interfaces": {
      "net/minecraft/class_2586": [
        "org/ladysnake/cca/api/v3/component/ComponentAccess"
      ]
    }
  },
  "depends": {
    "minecraft": ">=1.17-",
    "fabric-api-base": "*",
    "fabric-api-lookup-api-v1": "*",
    "fabric-networking-api-v1": "*",
    "cardinal-components-base": "*"
  },
  "authors": [
    {
      "name": "UpcraftLP",
      "contact": {
        "homepage": "https://twitter.com/UpcraftLP"
      }
    },
    "Pyrofab",
    "B0undaryBreaker"
  ],
  "contact": {
    "homepage": "https://minecraft.curseforge.com/projects/318449",
    "issues": "https://github.com/Ladysnake/Cardinal-Components-API/issues",
    "sources": "https://github.com/Ladysnake/Cardinal-Components-API"
  },
  "license": "MIT",
  "mixins": [
    {
      "environment": "*",
      "config": "mixins.cardinal_components_block.json"
    }
  ]
}
